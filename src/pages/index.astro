---
import { siteConfig } from "../config";
import "../styles/global.css";

const c = siteConfig.colors;
const base = import.meta.env.BASE_URL;
---

<html lang="en" style={`--color-primary-dark:${c.primaryDark};--color-primary:${c.primary};--color-primary-light:${c.primaryLight};--color-accent:${c.accent};--color-surface:${c.surface};--color-surface-light:${c.surfaceLight}`}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={siteConfig.description} />
    <meta name="author" content={siteConfig.name} />
    <!-- Open Graph -->
    <meta property="og:title" content={`${siteConfig.name} â€” ${siteConfig.title}`} />
    <meta property="og:description" content={siteConfig.tagline} />
    <meta property="og:type" content="website" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{siteConfig.shortName} | {siteConfig.title}</title>
  </head>
  <body>
    <!-- â•â•â•â•â•â•â•â•â•â•â• FLOATING HEADER â•â•â•â•â•â•â•â•â•â•â• -->
    <header id="floating-header" class="fixed top-4 left-1/2 -translate-x-1/2 z-50 hidden">
      <nav class="flex items-center gap-6 px-6 py-3 rounded-full border border-white/10" style={`background: ${c.primaryDark}ee; backdrop-filter: blur(12px);`}>
        <span class="font-accent text-sm font-semibold tracking-wide" style={`color: ${c.accent}`}>DV</span>
        <a href="#about" class="text-xs text-white/60 hover:text-white transition-colors">About</a>
        <a href="#education" class="text-xs text-white/60 hover:text-white transition-colors">Education</a>
        <a href="#leadership" class="text-xs text-white/60 hover:text-white transition-colors">Leadership</a>
        <a href="#skills" class="text-xs text-white/60 hover:text-white transition-colors">Skills</a>
        <a href="#contact" class="text-xs text-white/60 hover:text-white transition-colors">Contact</a>
      </nav>
    </header>

    <main>
      <!-- â•â•â•â•â•â•â•â•â•â•â• HERO â•â•â•â•â•â•â•â•â•â•â• -->
      <section id="hero" class="min-h-screen flex items-center px-6 sm:px-12 md:px-16 lg:px-24 py-20" style={`background: linear-gradient(135deg, ${c.primaryDark} 0%, ${c.surface} 50%, ${c.primary} 100%);`}>
        <div class="max-w-6xl mx-auto w-full">
          <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
            <!-- Photo -->
            <div class="hero-photo flex-shrink-0">
              <div class="relative">
                <div class="photo-ring w-48 h-48 sm:w-56 sm:h-56 lg:w-64 lg:h-64 rounded-full p-1" style={`background: linear-gradient(135deg, ${c.accent}, ${c.primaryLight}, ${c.accent});`}>
                  <img src={`${base}profile.jpg`} alt={siteConfig.name} class="w-full h-full rounded-full object-cover object-top" />
                </div>
                <div class="absolute -bottom-2 -right-2 px-3 py-1 rounded-full text-xs font-accent font-semibold" style={`background: ${c.accent}; color: ${c.primaryDark};`}>
                  ðŸ‡µðŸ‡ª â†’ ðŸ‡©ðŸ‡ª
                </div>
              </div>
            </div>

            <!-- Content -->
            <div class="text-center lg:text-left">
              <p class="hero-title font-accent text-sm tracking-[0.2em] uppercase mb-3" style={`color: ${c.accent};`}>{siteConfig.title}</p>
              <h1 class="hero-name text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight" style={`color: ${c.surfaceLight};`}>
                {siteConfig.name.split(' ').slice(0, 2).join(' ')}<br />
                <span style={`color: ${c.accent};`}>{siteConfig.name.split(' ').slice(2).join(' ')}</span>
              </h1>
              <p class="hero-tagline mt-4 text-lg sm:text-xl font-light leading-relaxed" style={`color: ${c.surfaceLight}aa;`}>
                {siteConfig.tagline}
              </p>

              <!-- Stats -->
              <div class="hero-stats flex flex-wrap justify-center lg:justify-start gap-6 mt-8">
                {siteConfig.stats.map((stat) => (
                  <div class="text-center">
                    <div class="font-accent text-2xl sm:text-3xl font-bold" style={`color: ${c.accent};`}>{stat.value}</div>
                    <div class="text-xs mt-1 uppercase tracking-wide" style={`color: ${c.surfaceLight}88;`}>{stat.label}</div>
                  </div>
                ))}
              </div>

              <!-- CTA -->
              <div class="hero-cta flex flex-wrap gap-4 mt-8 justify-center lg:justify-start">
                <a href="#leadership" class="btn-hover inline-flex items-center gap-2 px-6 py-3 rounded-full text-sm font-semibold" style={`background: ${c.accent}; color: ${c.primaryDark};`}>
                  View My Journey
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17l9.2-9.2M17 17V7H7"/></svg>
                </a>
                <a href="#contact" class="btn-hover inline-flex items-center gap-2 px-6 py-3 rounded-full text-sm font-semibold border" style={`border-color: ${c.accent}44; color: ${c.accent};`}>
                  Contact Me
                </a>
              </div>

              <!-- Social -->
              <div class="hero-social flex gap-4 mt-6 justify-center lg:justify-start">
                <a href={`mailto:${siteConfig.social.email}`} aria-label="Email" class="transition-colors duration-300" style={`color: ${c.surfaceLight}66;`}>
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 7a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7z"/><path d="M3 7l9 6 9-6"/></svg>
                </a>
                <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="transition-colors duration-300" style={`color: ${c.surfaceLight}66;`}>
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 11v5"/><path d="M8 8v.01"/><path d="M12 16v-5"/><path d="M16 16v-3a2 2 0 1 0-4 0"/><path d="M3 7a4 4 0 0 1 4-4h10a4 4 0 0 1 4 4v10a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V7z"/></svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Shimmer separator -->
      <div class="bar-shimmer h-px w-full"></div>

      <!-- â•â•â•â•â•â•â•â•â•â•â• ABOUT â€” "From Lima to Bremen" â•â•â•â•â•â•â•â•â•â•â• -->
      <section id="about" class="py-20 md:py-28 px-6 sm:px-12 md:px-16 lg:px-24" style={`background: ${c.surface};`}>
        <div class="max-w-4xl mx-auto">
          <div class="reveal">
            <p class="font-accent text-sm tracking-[0.2em] uppercase mb-3" style={`color: ${c.accent};`}>About Me</p>
            <h2 class="text-3xl sm:text-4xl font-bold mb-8" style={`color: ${c.surfaceLight};`}>From Lima to Bremen</h2>
          </div>

          <div class="reveal stagger-1 space-y-5 text-base sm:text-lg leading-relaxed" style={`color: ${c.surfaceLight}cc;`}>
            <p>{siteConfig.about.intro}</p>
            <p>{siteConfig.about.body}</p>
            <p class="font-medium" style={`color: ${c.accent};`}>{siteConfig.about.closing}</p>
          </div>

          <!-- Journey Timeline -->
          <div class="reveal stagger-2 mt-14">
            <div class="relative">
              <!-- Line -->
              <div class="journey-line hidden sm:block absolute top-5 left-0 right-0 h-px" style={`background: ${c.primaryLight};`}>
                <div class="journey-line-inner h-full" style={`background: ${c.accent};`}></div>
              </div>

              <!-- Dots -->
              <div class="grid grid-cols-1 sm:grid-cols-4 gap-6 sm:gap-4">
                {siteConfig.journey.map((stop, i) => (
                  <div class="journey-dot text-center relative" style={`animation-delay: ${0.3 + i * 0.2}s;`}>
                    <div class="hidden sm:block w-3 h-3 rounded-full mx-auto mb-4 border-2" style={`border-color: ${c.accent}; background: ${c.primaryDark};`}></div>
                    <div class="text-2xl mb-1">{stop.flag}</div>
                    <div class="font-accent text-sm font-bold" style={`color: ${c.accent};`}>{stop.year}</div>
                    <div class="text-xs mt-1" style={`color: ${c.surfaceLight}88;`}>{stop.place}</div>
                    <div class="text-xs mt-1 font-medium" style={`color: ${c.surfaceLight}cc;`}>{stop.event}</div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </section>

      <div class="bar-shimmer h-px w-full"></div>

      <!-- â•â•â•â•â•â•â•â•â•â•â• EDUCATION â•â•â•â•â•â•â•â•â•â•â• -->
      <section id="education" class="py-20 md:py-28 px-6 sm:px-12 md:px-16 lg:px-24" style={`background: ${c.primaryDark};`}>
        <div class="max-w-5xl mx-auto">
          <div class="reveal">
            <p class="font-accent text-sm tracking-[0.2em] uppercase mb-3" style={`color: ${c.accent};`}>Academic Journey</p>
            <h2 class="text-3xl sm:text-4xl font-bold mb-12" style={`color: ${c.surfaceLight};`}>Education</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {siteConfig.education.map((edu, i) => (
              <div class={`reveal-scale card-hover rounded-2xl p-6 sm:p-8 border ${i === 0 ? 'md:col-span-2' : ''}`} style={`background: ${c.primary}; border-color: ${c.primaryLight}; transition-delay: ${i * 0.15}s;`}>
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <div class="flex items-center gap-2 mb-2">
                      <span class="text-xl">{edu.flag}</span>
                      <h3 class="text-lg sm:text-xl font-bold" style={`color: ${c.surfaceLight};`}>{edu.school}</h3>
                    </div>
                    <p class="text-sm" style={`color: ${c.accent};`}>{edu.location}</p>
                  </div>
                  <span class="font-accent text-xs px-3 py-1 rounded-full whitespace-nowrap" style={`background: ${c.accent}15; color: ${c.accent};`}>{edu.dateRange}</span>
                </div>
                <p class="text-base font-semibold mb-2" style={`color: ${c.surfaceLight}dd;`}>{edu.degree}</p>
                <p class="text-sm mb-3" style={`color: ${c.surfaceLight}88;`}>{edu.gpa}</p>
                <div class="flex flex-wrap gap-2">
                  {edu.coursework.map((course) => (
                    <span class="skill-hover text-xs px-3 py-1 rounded-full" style={`background: ${c.primaryLight}; color: ${c.surfaceLight}aa;`}>{course}</span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <div class="bar-shimmer h-px w-full"></div>

      <!-- â•â•â•â•â•â•â•â•â•â•â• LEADERSHIP â€” Numbered Cards â•â•â•â•â•â•â•â•â•â•â• -->
      <section id="leadership" class="py-20 md:py-28 px-6 sm:px-12 md:px-16 lg:px-24" style={`background: ${c.surface};`}>
        <div class="max-w-5xl mx-auto">
          <div class="reveal">
            <p class="font-accent text-sm tracking-[0.2em] uppercase mb-3" style={`color: ${c.accent};`}>Impact & Leadership</p>
            <h2 class="text-3xl sm:text-4xl font-bold mb-12" style={`color: ${c.surfaceLight};`}>What I've Built</h2>
          </div>

          <div class="space-y-5">
            {siteConfig.leadership.map((item, i) => (
              <div class={`reveal numbered-card card-hover flex flex-col sm:flex-row gap-4 sm:gap-6 rounded-2xl p-6 sm:p-8 border`} style={`background: ${c.primary}; border-color: ${c.primaryLight}; transition-delay: ${i * 0.1}s;`}>
                <!-- Number -->
                <div class="flex-shrink-0 flex items-start gap-3 sm:gap-0 sm:flex-col sm:items-center sm:w-16">
                  <span class="font-accent text-3xl sm:text-4xl font-bold" style={`color: ${c.accent}33;`}>{item.number}</span>
                  <span class="text-2xl sm:mt-2">{item.icon}</span>
                </div>
                <!-- Content -->
                <div class="flex-1">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-2">
                    <h3 class="text-lg font-bold" style={`color: ${c.surfaceLight};`}>{item.title}</h3>
                    <span class="font-accent text-xs px-3 py-1 rounded-full whitespace-nowrap self-start" style={`background: ${c.accent}15; color: ${c.accent};`}>{item.period}</span>
                  </div>
                  <p class="text-sm font-medium mb-2" style={`color: ${c.accent};`}>{item.role} â€” {item.org}</p>
                  <p class="text-sm leading-relaxed" style={`color: ${c.surfaceLight}aa;`}>{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <div class="bar-shimmer h-px w-full"></div>

      <!-- â•â•â•â•â•â•â•â•â•â•â• SKILLS â€” "Toolkit" â•â•â•â•â•â•â•â•â•â•â• -->
      <section id="skills" class="py-20 md:py-28 px-6 sm:px-12 md:px-16 lg:px-24" style={`background: ${c.primaryDark};`}>
        <div class="max-w-5xl mx-auto">
          <div class="reveal">
            <p class="font-accent text-sm tracking-[0.2em] uppercase mb-3" style={`color: ${c.accent};`}>Capabilities</p>
            <h2 class="text-3xl sm:text-4xl font-bold mb-12" style={`color: ${c.surfaceLight};`}>Toolkit</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Languages -->
            <div class="reveal stagger-1">
              <h3 class="font-accent text-sm font-semibold uppercase tracking-wide mb-4" style={`color: ${c.accent};`}>Languages</h3>
              <div class="space-y-3">
                {siteConfig.skills.languages.map((lang) => (
                  <div class="flex items-center justify-between p-3 rounded-xl border" style={`background: ${c.primary}; border-color: ${c.primaryLight};`}>
                    <div class="flex items-center gap-2">
                      <span>{lang.flag}</span>
                      <span class="text-sm font-medium" style={`color: ${c.surfaceLight};`}>{lang.name}</span>
                    </div>
                    <span class="font-accent text-xs" style={`color: ${c.accent};`}>{lang.level}</span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Technical -->
            <div class="reveal stagger-2">
              <h3 class="font-accent text-sm font-semibold uppercase tracking-wide mb-4" style={`color: ${c.accent};`}>Technical</h3>
              <div class="flex flex-wrap gap-2">
                {siteConfig.skills.technical.map((skill) => (
                  <span class="skill-hover text-xs px-3 py-2 rounded-lg border" style={`background: ${c.primary}; border-color: ${c.primaryLight}; color: ${c.surfaceLight}cc;`}>{skill}</span>
                ))}
              </div>
            </div>

            <!-- Professional -->
            <div class="reveal stagger-3">
              <h3 class="font-accent text-sm font-semibold uppercase tracking-wide mb-4" style={`color: ${c.accent};`}>Professional</h3>
              <div class="flex flex-wrap gap-2">
                {siteConfig.skills.professional.map((skill) => (
                  <span class="skill-hover text-xs px-3 py-2 rounded-lg border" style={`background: ${c.primary}; border-color: ${c.primaryLight}; color: ${c.surfaceLight}cc;`}>{skill}</span>
                ))}
              </div>
            </div>
          </div>

          <!-- Personal Interests -->
          <div class="reveal stagger-4 mt-12 text-center">
            <h3 class="font-accent text-sm font-semibold uppercase tracking-wide mb-4" style={`color: ${c.accent};`}>Beyond Business</h3>
            <div class="flex flex-wrap justify-center gap-4">
              {siteConfig.skills.interests.map((interest) => (
                <span class="text-sm px-4 py-2 rounded-full border" style={`border-color: ${c.primaryLight}; color: ${c.surfaceLight}aa;`}>
                  {interest.icon} {interest.name}
                </span>
              ))}
            </div>
          </div>
        </div>
      </section>

      <div class="bar-shimmer h-px w-full"></div>

      <!-- â•â•â•â•â•â•â•â•â•â•â• CONTACT â•â•â•â•â•â•â•â•â•â•â• -->
      <section id="contact" class="py-20 md:py-28 px-6 sm:px-12 md:px-16 lg:px-24" style={`background: ${c.surface};`}>
        <div class="max-w-3xl mx-auto text-center">
          <div class="reveal">
            <p class="font-accent text-sm tracking-[0.2em] uppercase mb-3" style={`color: ${c.accent};`}>Get in Touch</p>
            <h2 class="text-3xl sm:text-4xl font-bold mb-4" style={`color: ${c.surfaceLight};`}>Let's Connect</h2>
            <p class="text-lg mb-10" style={`color: ${c.surfaceLight}aa;`}>Open to opportunities in International Business, Consulting & Strategy across Europe.</p>
          </div>

          <div class="reveal stagger-1 flex flex-col sm:flex-row justify-center gap-4">
            <a href={`mailto:${siteConfig.social.email}`} class="btn-hover inline-flex items-center justify-center gap-2 px-6 py-3 rounded-full text-sm font-semibold" style={`background: ${c.accent}; color: ${c.primaryDark};`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 7a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7z"/><path d="M3 7l9 6 9-6"/></svg>
              Email Me
            </a>
            <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" class="btn-hover inline-flex items-center justify-center gap-2 px-6 py-3 rounded-full text-sm font-semibold border" style={`border-color: ${c.accent}44; color: ${c.accent};`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 11v5"/><path d="M8 8v.01"/><path d="M12 16v-5"/><path d="M16 16v-3a2 2 0 1 0-4 0"/><path d="M3 7a4 4 0 0 1 4-4h10a4 4 0 0 1 4 4v10a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V7z"/></svg>
              LinkedIn
            </a>
            <a href={`https://wa.me/${siteConfig.social.whatsapp.replace(/\+/g, '')}`} target="_blank" rel="noopener noreferrer" class="btn-hover inline-flex items-center justify-center gap-2 px-6 py-3 rounded-full text-sm font-semibold border" style={`border-color: ${c.accent}44; color: ${c.accent};`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
              WhatsApp
            </a>
          </div>

          <div class="reveal stagger-2 mt-8">
            <p class="text-sm" style={`color: ${c.surfaceLight}66;`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="inline-block mr-1"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
              Bremen, Germany
            </p>
          </div>
        </div>
      </section>
    </main>

    <!-- â•â•â•â•â•â•â•â•â•â•â• FOOTER â•â•â•â•â•â•â•â•â•â•â• -->
    <footer class="py-8 px-6 border-t" style={`background: ${c.primaryDark}; border-color: ${c.primaryLight};`}>
      <div class="max-w-6xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-sm" style={`color: ${c.surfaceLight}66;`}>&copy; 2026 {siteConfig.name}</p>
        <p class="text-xs" style={`color: ${c.surfaceLight}44;`}>
          Built with <span class="text-red-400">&hearts;</span> by
          <a href="https://cofoundy.dev" target="_blank" rel="noopener noreferrer" class="hover:underline" style={`color: ${c.surfaceLight}66;`}>Cofoundy</a>
        </p>
      </div>
    </footer>

    <!-- Scroll Reveal + Floating Header -->
    <script>
      const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('revealed');
            obs.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -10% 0px' });

      document.querySelectorAll('.reveal, .reveal-left, .reveal-right, .reveal-scale').forEach(el => observer.observe(el));

      // Floating header
      const header = document.getElementById('floating-header');
      let lastScroll = 0;
      window.addEventListener('scroll', () => {
        const current = window.scrollY;
        if (current > 400) {
          header?.classList.remove('hidden');
          header?.classList.add('header-visible');
        } else {
          header?.classList.add('hidden');
          header?.classList.remove('header-visible');
        }
        lastScroll = current;
      });

      // Journey line reveal
      const journeyLine = document.querySelector('.journey-line');
      if (journeyLine) {
        const jObs = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('revealed');
              jObs.unobserve(entry.target);
            }
          });
        }, { threshold: 0.3 });
        jObs.observe(journeyLine);
      }
    </script>
