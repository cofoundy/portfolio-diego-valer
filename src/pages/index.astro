---
import { siteConfig } from "../config";
import "../styles/global.css";

const c = siteConfig.colors;
const base = import.meta.env.BASE_URL;
---

<html lang="en" style={`--color-primary-dark:${c.primaryDark};--color-primary:${c.primary};--color-primary-light:${c.primaryLight};--color-accent:${c.accent};--color-surface:${c.surface};--color-surface-light:${c.surfaceLight}`}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={siteConfig.description} />
    <meta name="author" content={siteConfig.name} />
    <!-- Open Graph -->
    <meta property="og:title" content={`${siteConfig.name} â€” ${siteConfig.title}`} />
    <meta property="og:description" content={siteConfig.tagline} />
    <meta property="og:type" content="website" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{siteConfig.shortName} | {siteConfig.title}</title>
  </head>
  <body>
    <!-- â•â•â•â•â•â•â•â•â•â•â• FLOATING HEADER â•â•â•â•â•â•â•â•â•â•â• -->
    <header id="floating-header" class="fixed top-4 left-1/2 -translate-x-1/2 z-50 hidden">
      <nav class="flex items-center gap-6 px-6 py-3 rounded-full border border-white/10" style={`background: ${c.primaryDark}ee; backdrop-filter: blur(12px);`}>
        <span class="font-accent text-sm font-semibold tracking-wide" style={`color: ${c.accent}`}>DV</span>
        <a href="#about" class="text-xs text-white/60 hover:text-white transition-colors">About</a>
        <a href="#education" class="text-xs text-white/60 hover:text-white transition-colors">Education</a>
        <a href="#leadership" class="text-xs text-white/60 hover:text-white transition-colors">Leadership</a>
        <a href="#projects" class="text-xs text-white/60 hover:text-white transition-colors">Projects</a>
        <a href="#skills" class="text-xs text-white/60 hover:text-white transition-colors">Skills</a>
        <a href="#contact" class="text-xs text-white/60 hover:text-white transition-colors">Contact</a>
      </nav>
    </header>

    <main>
      <!-- â•â•â•â•â•â•â•â•â•â•â• HERO â•â•â•â•â•â•â•â•â•â•â• -->
      <section id="hero" class="min-h-screen flex items-center px-6 sm:px-12 md:px-16 lg:px-24 py-24 md:py-32" style={`background: linear-gradient(135deg, ${c.primaryDark} 0%, ${c.surface} 50%, ${c.primary} 100%);`}>
        <div class="max-w-7xl mx-auto w-full">
          <div class="flex flex-col lg:flex-row items-center gap-14 lg:gap-24">
            <!-- Photo Carousel (Left) -->
            <div class="hero-photo flex-shrink-0">
              <div class="relative">
                <div class="photo-ring w-60 h-60 sm:w-72 sm:h-72 lg:w-[22rem] lg:h-[22rem] rounded-full p-1.5 overflow-hidden" style={`background: linear-gradient(135deg, ${c.accent}, ${c.primaryLight}, ${c.accent});`}>
                  <div id="hero-carousel" class="w-full h-full rounded-full overflow-hidden relative">
                    <img src={`${base}/profile.jpg`} alt={siteConfig.name} class="hero-slide absolute inset-0 w-full h-full rounded-full object-cover object-top opacity-100 transition-opacity duration-700" />
                    {siteConfig.heroImages.map((img, i) => (
                      <img src={`${base}/${img}`} alt={`${siteConfig.name} - ${i + 2}`} class="hero-slide absolute inset-0 w-full h-full rounded-full object-cover object-top opacity-0 transition-opacity duration-700" />
                    ))}
                  </div>
                </div>
                <div class="absolute -bottom-2 -right-2 px-4 py-1.5 rounded-full text-sm font-accent font-semibold" style={`background: ${c.accent}; color: ${c.primaryDark};`}>
                  ðŸ‡µðŸ‡ª â†’ ðŸ‡©ðŸ‡ª â†’ ðŸ‡°ðŸ‡·
                </div>
              </div>
            </div>

            <!-- Content (Right) -->
            <div class="flex-1 text-center lg:text-left">
              <!-- Title block (top) -->
              <div class="hero-title">
                <p class="font-accent text-sm tracking-[0.2em] uppercase mb-4" style={`color: ${c.accent};`}>{siteConfig.title}</p>
                <h1 class="hero-name text-4xl sm:text-5xl lg:text-5xl xl:text-6xl font-bold leading-tight" style={`color: ${c.surfaceLight};`}>
                  {siteConfig.name.split(' ').slice(0, 2).join(' ')}<br />
                  <span style={`color: ${c.accent};`}>{siteConfig.name.split(' ').slice(2).join(' ')}</span>
                </h1>
                <p class="hero-tagline mt-4 text-lg font-light leading-relaxed" style={`color: ${c.surfaceLight}aa;`}>
                  {siteConfig.tagline}
                </p>
              </div>

              <!-- Two-column grid: Contact + Stats (below title) -->
              <div class="hero-stats mt-8 grid grid-cols-1 sm:grid-cols-2 gap-8 lg:gap-12">
                <!-- Contact column -->
                <div class="rounded-2xl p-5 border" style={`background: ${c.primary}44; border-color: ${c.primaryLight}44;`}>
                  <h3 class="font-accent text-xs uppercase tracking-wide mb-4" style={`color: ${c.accent};`}>Contact</h3>
                  <div class="flex flex-col gap-3">
                    <a href={`mailto:${siteConfig.social.email}`} class="inline-flex items-center gap-3 group lg:justify-start justify-center" style={`color: ${c.surfaceLight}cc;`}>
                      <span class="flex items-center justify-center w-9 h-9 rounded-full border flex-shrink-0" style={`border-color: ${c.primaryLight}; background: ${c.primary};`}>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style={`color: ${c.accent};`}><path d="M3 7a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7z"/><path d="M3 7l9 6 9-6"/></svg>
                      </span>
                      <span class="text-sm group-hover:underline truncate">{siteConfig.social.email}</span>
                    </a>
                    <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 group lg:justify-start justify-center" style={`color: ${c.surfaceLight}cc;`}>
                      <span class="flex items-center justify-center w-9 h-9 rounded-full border flex-shrink-0" style={`border-color: ${c.primaryLight}; background: ${c.primary};`}>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style={`color: ${c.accent};`}><path d="M8 11v5"/><path d="M8 8v.01"/><path d="M12 16v-5"/><path d="M16 16v-3a2 2 0 1 0-4 0"/><path d="M3 7a4 4 0 0 1 4-4h10a4 4 0 0 1 4 4v10a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V7z"/></svg>
                      </span>
                      <span class="text-sm group-hover:underline">LinkedIn</span>
                    </a>
                    <a href={`https://wa.me/${siteConfig.social.whatsapp.replace(/\+/g, '')}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 group lg:justify-start justify-center" style={`color: ${c.surfaceLight}cc;`}>
                      <span class="flex items-center justify-center w-9 h-9 rounded-full border flex-shrink-0" style={`border-color: ${c.primaryLight}; background: ${c.primary};`}>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" style={`color: ${c.accent};`}><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
                      </span>
                      <span class="text-sm group-hover:underline">WhatsApp</span>
                    </a>
                    <p class="inline-flex items-center gap-3 lg:justify-start justify-center" style={`color: ${c.surfaceLight}66;`}>
                      <span class="flex items-center justify-center w-9 h-9 rounded-full border flex-shrink-0" style={`border-color: ${c.primaryLight}; background: ${c.primary};`}>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style={`color: ${c.accent};`}><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
                      </span>
                      <span class="text-sm">Bremen, Germany</span>
                    </p>
                  </div>
                </div>

                <!-- Stats column -->
                <div class="rounded-2xl p-5 border" style={`background: ${c.primary}44; border-color: ${c.primaryLight}44;`}>
                  <h3 class="font-accent text-xs uppercase tracking-wide mb-4" style={`color: ${c.accent};`}>At a Glance</h3>
                  <div class="grid grid-cols-2 gap-5">
                    {siteConfig.stats.map((stat) => (
                      <div>
                        <div class="font-accent text-3xl font-bold" style={`color: ${c.accent};`}>{stat.value}</div>
                        <div class="text-xs mt-1 uppercase tracking-wide" style={`color: ${c.surfaceLight}77;`}>{stat.label}</div>
                      </div>
                    ))}
                  </div>
                </div>
              </div>

              <!-- CTA -->
              <div class="hero-cta flex flex-wrap gap-4 mt-8 lg:justify-start justify-center">
                <a href="#leadership" class="btn-hover inline-flex items-center gap-2 px-7 py-3.5 rounded-full text-sm font-semibold" style={`background: ${c.accent}; color: ${c.primaryDark};`}>
                  View My Journey
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17l9.2-9.2M17 17V7H7"/></svg>
                </a>
                <a href="#contact" class="btn-hover inline-flex items-center gap-2 px-7 py-3.5 rounded-full text-sm font-semibold border" style={`border-color: ${c.accent}44; color: ${c.accent};`}>
                  Contact Me
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Shimmer separator -->
      <div class="bar-shimmer h-px w-full"></div>

      <!-- â•â•â•â•â•â•â•â•â•â•â• ABOUT â€” "From Lima to Bremen" â•â•â•â•â•â•â•â•â•â•â• -->
      <section id="about" class="py-20 md:py-28 px-6 sm:px-12 md:px-16 lg:px-24" style={`background: ${c.surface};`}>
        <div class="max-w-4xl mx-auto">
          <div class="reveal">
            <p class="font-accent text-sm tracking-[0.2em] uppercase mb-3" style={`color: ${c.accent};`}>About Me</p>
            <h2 class="text-3xl sm:text-4xl font-bold mb-8" style={`color: ${c.surfaceLight};`}>From Lima to the World</h2>
          </div>

          <div class="reveal stagger-1 space-y-5 text-base sm:text-lg leading-relaxed" style={`color: ${c.surfaceLight}cc;`}>
            <p>{siteConfig.about.intro}</p>
            <p>{siteConfig.about.body}</p>
            <p class="font-medium" style={`color: ${c.accent};`}>{siteConfig.about.closing}</p>
          </div>

          <!-- Journey Timeline -->
          <div class="reveal stagger-2 mt-14">
            <div class="relative">
              <!-- Line -->
              <div class="journey-line hidden sm:block absolute top-5 left-0 right-0 h-px" style={`background: ${c.primaryLight};`}>
                <div class="journey-line-inner h-full" style={`background: ${c.accent};`}></div>
              </div>

              <!-- Dots -->
              <div class="grid grid-cols-1 sm:grid-cols-5 gap-6 sm:gap-4">
                {siteConfig.journey.map((stop, i) => (
                  <div class="journey-dot text-center relative" style={`animation-delay: ${0.3 + i * 0.2}s;`}>
                    <div class="hidden sm:block w-3 h-3 rounded-full mx-auto mb-4 border-2" style={`border-color: ${c.accent}; background: ${c.primaryDark};`}></div>
                    <div class="text-2xl mb-1">{stop.flag}</div>
                    <div class="font-accent text-sm font-bold" style={`color: ${c.accent};`}>{stop.year}</div>
                    <div class="text-xs mt-1" style={`color: ${c.surfaceLight}88;`}>{stop.place}</div>
                    <div class="text-xs mt-1 font-medium" style={`color: ${c.surfaceLight}cc;`}>{stop.event}</div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </section>

      <div class="bar-shimmer h-px w-full"></div>

      <!-- â•â•â•â•â•â•â•â•â•â•â• EDUCATION â•â•â•â•â•â•â•â•â•â•â• -->
      <section id="education" class="py-20 md:py-28 px-6 sm:px-12 md:px-16 lg:px-24" style={`background: ${c.primaryDark};`}>
        <div class="max-w-5xl mx-auto">
          <div class="reveal">
            <p class="font-accent text-sm tracking-[0.2em] uppercase mb-3" style={`color: ${c.accent};`}>Academic Journey</p>
            <h2 class="text-3xl sm:text-4xl font-bold mb-12" style={`color: ${c.surfaceLight};`}>Education</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {siteConfig.education.map((edu, i) => (
              <div class={`reveal-scale card-hover rounded-2xl p-6 sm:p-8 border ${i === 0 ? 'md:col-span-2' : ''}`} style={`background: ${c.primary}; border-color: ${c.primaryLight}; transition-delay: ${i * 0.15}s;`}>
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <div class="flex items-center gap-2 mb-2">
                      <span class="text-xl">{edu.flag}</span>
                      <h3 class="text-lg sm:text-xl font-bold" style={`color: ${c.surfaceLight};`}>{edu.school}</h3>
                    </div>
                    <p class="text-sm" style={`color: ${c.accent};`}>{edu.location}</p>
                  </div>
                  <span class="font-accent text-xs px-3 py-1 rounded-full whitespace-nowrap" style={`background: ${c.accent}15; color: ${c.accent};`}>{edu.dateRange}</span>
                </div>
                <p class="text-base font-semibold mb-2" style={`color: ${c.surfaceLight}dd;`}>{edu.degree}</p>
                <p class="text-sm mb-3" style={`color: ${c.surfaceLight}88;`}>{edu.gpa}</p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {edu.coursework.map((course) => (
                    <span class="skill-hover text-xs px-3 py-1 rounded-full" style={`background: ${c.primaryLight}; color: ${c.surfaceLight}aa;`}>{course}</span>
                  ))}
                </div>
                {edu.images && edu.images.length > 0 && (
                  <div class="grid grid-cols-2 sm:grid-cols-4 gap-2 mt-4">
                    {edu.images.map((img) => (
                      <img src={`${base}/${img}`} alt={edu.school} class="rounded-lg object-cover w-full h-24 sm:h-28 cursor-pointer hover:opacity-80 transition-opacity gallery-thumb" loading="lazy" />
                    ))}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </section>

      <div class="bar-shimmer h-px w-full"></div>

      <!-- â•â•â•â•â•â•â•â•â•â•â• LEADERSHIP â€” Clickable Cards + Modal â•â•â•â•â•â•â•â•â•â•â• -->
      <section id="leadership" class="py-20 md:py-28 px-6 sm:px-12 md:px-16 lg:px-24" style={`background: ${c.surface};`}>
        <div class="max-w-5xl mx-auto">
          <div class="reveal">
            <p class="font-accent text-sm tracking-[0.2em] uppercase mb-3" style={`color: ${c.accent};`}>Impact & Leadership</p>
            <h2 class="text-3xl sm:text-4xl font-bold mb-4" style={`color: ${c.surfaceLight};`}>What I've Built</h2>
            <p class="text-sm mb-12" style={`color: ${c.surfaceLight}66;`}>Click on any activity to see more details and photos</p>
          </div>

          <div class="space-y-5">
            {siteConfig.leadership.map((item, i) => (
              <button
                type="button"
                class={`reveal numbered-card card-hover flex flex-col sm:flex-row gap-4 sm:gap-6 rounded-2xl p-6 sm:p-8 border w-full text-left cursor-pointer leadership-card`}
                style={`background: ${c.primary}; border-color: ${c.primaryLight}; transition-delay: ${i * 0.1}s;`}
                data-index={i}
              >
                <!-- Number -->
                <div class="flex-shrink-0 flex items-start gap-3 sm:gap-0 sm:flex-col sm:items-center sm:w-16">
                  <span class="font-accent text-3xl sm:text-4xl font-bold" style={`color: ${c.accent}33;`}>{item.number}</span>
                  <span class="text-2xl sm:mt-2">{item.icon}</span>
                </div>
                <!-- Content -->
                <div class="flex-1">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-2">
                    <h3 class="text-lg font-bold" style={`color: ${c.surfaceLight};`}>{item.title}</h3>
                    <span class="font-accent text-xs px-3 py-1 rounded-full whitespace-nowrap self-start" style={`background: ${c.accent}15; color: ${c.accent};`}>{item.period}</span>
                  </div>
                  <p class="text-sm font-medium mb-2" style={`color: ${c.accent};`}>{item.role} â€” {item.org}</p>
                  <p class="text-sm leading-relaxed" style={`color: ${c.surfaceLight}aa;`}>{item.description}</p>
                  {item.images && item.images.length > 0 && (
                    <div class="flex items-center gap-1 mt-3" style={`color: ${c.accent}88;`}>
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
                      <span class="text-xs">{item.images.length} photos</span>
                    </div>
                  )}
                </div>
                <!-- Arrow indicator -->
                <div class="flex-shrink-0 self-center hidden sm:block" style={`color: ${c.accent}66;`}>
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18l6-6-6-6"/></svg>
                </div>
              </button>
            ))}
          </div>
        </div>
      </section>

      <!-- â•â•â•â•â•â•â•â•â•â•â• LEADERSHIP MODAL â•â•â•â•â•â•â•â•â•â•â• -->
      <div id="leadership-modal" class="modal-overlay fixed inset-0 z-[100] hidden items-center justify-center p-4 sm:p-6">
        <div class="modal-backdrop absolute inset-0" style={`background: ${c.primaryDark}ee;`}></div>
        <div class="modal-content relative w-full max-w-2xl max-h-[85vh] overflow-y-auto rounded-2xl border" style={`background: ${c.primary}; border-color: ${c.primaryLight};`}>
          <!-- Close button -->
          <button type="button" id="modal-close" class="absolute top-4 right-4 z-10 w-8 h-8 flex items-center justify-center rounded-full transition-colors cursor-pointer" style={`background: ${c.primaryLight}; color: ${c.surfaceLight}aa;`}>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6L6 18"/><path d="M6 6l12 12"/></svg>
          </button>

          <div class="p-6 sm:p-8">
            <!-- Header -->
            <div class="flex items-start gap-4 mb-6">
              <span id="modal-icon" class="text-3xl"></span>
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <span id="modal-number" class="font-accent text-sm font-bold" style={`color: ${c.accent}66;`}></span>
                </div>
                <h3 id="modal-title" class="text-xl sm:text-2xl font-bold" style={`color: ${c.surfaceLight};`}></h3>
                <p id="modal-role" class="text-sm font-medium mt-1" style={`color: ${c.accent};`}></p>
                <p id="modal-period" class="font-accent text-xs mt-2 inline-block px-3 py-1 rounded-full" style={`background: ${c.accent}15; color: ${c.accent};`}></p>
              </div>
            </div>

            <!-- Separator -->
            <div class="h-px mb-6" style={`background: ${c.primaryLight};`}></div>

            <!-- Description -->
            <div class="mb-6">
              <h4 class="font-accent text-xs uppercase tracking-wide mb-3" style={`color: ${c.accent};`}>About This Experience</h4>
              <p id="modal-details" class="text-sm leading-relaxed" style={`color: ${c.surfaceLight}cc;`}></p>
            </div>

            <!-- Skills -->
            <div class="mb-6">
              <h4 class="font-accent text-xs uppercase tracking-wide mb-3" style={`color: ${c.accent};`}>Skills Developed</h4>
              <div id="modal-skills" class="flex flex-wrap gap-2"></div>
            </div>

            <!-- Photo gallery -->
            <div id="modal-gallery" class="hidden">
              <h4 class="font-accent text-xs uppercase tracking-wide mb-3" style={`color: ${c.accent};`}>Gallery</h4>
