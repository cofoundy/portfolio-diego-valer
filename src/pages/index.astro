    <!-- Scroll Reveal + Floating Header + Modal + Hero Carousel + Lightbox -->
    <script define:vars={{ leadership: siteConfig.leadership, accentColor: c.accent, surfaceLightColor: c.surfaceLight, primaryLightColor: c.primaryLight, baseUrl: import.meta.env.BASE_URL }}>
      const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('revealed');
            obs.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -10% 0px' });

      document.querySelectorAll('.reveal, .reveal-left, .reveal-right, .reveal-scale').forEach(el => observer.observe(el));

      // Floating header
      const header = document.getElementById('floating-header');
      let lastScroll = 0;
      window.addEventListener('scroll', () => {
        const current = window.scrollY;
        if (current > 400) {
          header?.classList.remove('hidden');
          header?.classList.add('header-visible');
        } else {
          header?.classList.add('hidden');
          header?.classList.remove('header-visible');
        }
        lastScroll = current;
      });

      // Journey line reveal
      const journeyLine = document.querySelector('.journey-line');
      if (journeyLine) {
        const jObs = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('revealed');
              jObs.unobserve(entry.target);
            }
          });
        }, { threshold: 0.3 });
        jObs.observe(journeyLine);
      }

      // Hero photo carousel
      const heroSlides = document.querySelectorAll('.hero-slide');
      if (heroSlides.length > 1) {
        let currentSlide = 0;
        setInterval(() => {
          heroSlides[currentSlide].style.opacity = '0';
          currentSlide = (currentSlide + 1) % heroSlides.length;
          heroSlides[currentSlide].style.opacity = '1';
        }, 4000);
      }

      // Leadership Modal
      const modal = document.getElementById('leadership-modal');
      const modalClose = document.getElementById('modal-close');
      const modalBackdrop = modal?.querySelector('.modal-backdrop');
      const cards = document.querySelectorAll('.leadership-card');

      function openModal(index) {
        const item = leadership[index];
        if (!item || !modal) return;

        document.getElementById('modal-icon').textContent = item.icon;
        document.getElementById('modal-number').textContent = `#${item.number}`;
        document.getElementById('modal-title').textContent = item.title;
        document.getElementById('modal-role').textContent = `${item.role} â€” ${item.org}`;
        document.getElementById('modal-period').textContent = item.period;
        document.getElementById('modal-details').textContent = item.details || item.description;

        // Skills
        const skillsContainer = document.getElementById('modal-skills');
        skillsContainer.innerHTML = '';
        if (item.skills) {
          item.skills.forEach(skill => {
            const tag = document.createElement('span');
            tag.className = 'text-xs px-3 py-1.5 rounded-full';
            tag.style.cssText = `background: ${primaryLightColor}; color: ${surfaceLightColor}cc;`;
            tag.textContent = skill;
            skillsContainer.appendChild(tag);
          });
        }

        // Gallery
        const gallerySection = document.getElementById('modal-gallery');
        const galleryGrid = document.getElementById('modal-gallery-grid');
        galleryGrid.innerHTML = '';
        if (item.images && item.images.length > 0) {
          gallerySection.classList.remove('hidden');
          item.images.forEach(imgPath => {
            const img = document.createElement('img');
            img.src = `${baseUrl}/${imgPath}`;
            img.alt = item.title;
            img.className = 'rounded-lg object-cover w-full h-32 sm:h-40 cursor-pointer hover:opacity-80 transition-opacity gallery-thumb';
            img.loading = 'lazy';
            galleryGrid.appendChild(img);
          });
        } else {
          gallerySection.classList.add('hidden');
        }

        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
        requestAnimationFrame(() => modal.classList.add('modal-active'));
      }

      function closeModal() {
        if (!modal) return;
        modal.classList.remove('modal-active');
        setTimeout(() => {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
          document.body.style.overflow = '';
        }, 300);
      }

      cards.forEach(card => {
        card.addEventListener('click', () => {
          const index = parseInt(card.dataset.index, 10);
          openModal(index);
        });
      });

      modalClose?.addEventListener('click', closeModal);
      modalBackdrop?.addEventListener('click', closeModal);
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeModal();
      });

      // Lightbox for gallery thumbnails
      const lightbox = document.getElementById('lightbox');
      const lightboxImg = document.getElementById('lightbox-img');
      const lightboxClose = document.getElementById('lightbox-close');

      document.addEventListener('click', (e) => {
        const thumb = e.target.closest('.gallery-thumb');
        if (thumb && lightbox && lightboxImg) {
          lightboxImg.src = thumb.src;
          lightboxImg.alt = thumb.alt;
          lightbox.classList.remove('hidden');
          lightbox.classList.add('flex');
          document.body.style.overflow = 'hidden';
        }
      });

      function closeLightbox() {
        if (!lightbox) return;
        lightbox.classList.add('hidden');
        lightbox.classList.remove('flex');
        if (!modal?.classList.contains('flex')) {
          document.body.style.overflow = '';
        }
      }

      lightboxClose?.addEventListener('click', closeLightbox);
      lightbox?.addEventListener('click', (e) => {
        if (e.target === lightbox) closeLightbox();
      });
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && lightbox?.classList.contains('flex')) {
          closeLightbox();
          e.stopPropagation();
        }
      });
    </script>
